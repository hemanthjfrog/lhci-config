{
    "ci": {
        "collect": {
            "numberOfRuns": 1,
            "settings": {
           	    "chromeFlags": "--no-sandbox --headless"
            }
          },
          "assert": {
            "assertions": {
              "categories:performance": ["error", {"minScore": 0.85}],
              "categories:accessibility": ["error", {"minScore": 0.8}],
              "categories:best-practices": ["error", {"minScore": 0.9}],
              "categories:seo": ["error", {"minScore": 0.9}]
            }
          }
        }
  }
